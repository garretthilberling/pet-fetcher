<section class="uk-flex uk-flex-center">
    
    <div class="">
        <form class="">
        
            <div class="rounded-t-lg uk-margin-small-top bg-gradient-to-b from-violet-600 to-indigo-700 shadow-2xl shadow-indigo-700">

                <div class="">
                    <div class="flex justify-center pt-4 mt-9 mb-7 items-center">
                        <h2 class="uk-text-large text-indigo-50"><i class="fa-solid fa-cat pr-2 text-violet-300"></i> Post Your Pet <i class="fa-solid fa-dog pl-2 text-violet-300"></i></h2>
                    </div>
                    <div class="px-6" uk-grid>
                        <div class="flex justify-center">
                            <label for="pet_name"></label>
                            <input class="dashboard-inputs" type="text" placeholder="Pet Name" id="pet-name" name="pet-name"/>
                        </div>    

                        <div class="flex justify-center">
                            <label for="species"></label>
                            <input class="dashboard-inputs" placeholder="Species" id="species" name="species"/>
                        </div>
                        
                        <div class="flex justify-center">
                            <label for="breed"></label>
                            <input class="dashboard-inputs" placeholder="Breed" id="breed" name="breed"/>
                        </div>
                        
                        <div class="flex justify-center">
                            <label for="size"></label>
                            <input class="dashboard-inputs" placeholder="Size" id="size" name="size"/>
                        </div>
                        
                        <div class="flex justify-center">
                            <label for="age"></label>
                            <input class="dashboard-inputs" placeholder="Age" id="age" name="age"/>
                        </div>

                        <div class="flex justify-center">
                            <label for="bio"></label>
                            <textarea class="dashboard-inputs" placeholder="Bio" id="bio" name="bio"></textarea>
                        </div>
                    </div>
                </div>
                <div class="mt-4 mx-0 px-0">
                    <div
                    class="js-upload uk-placeholder uk-text-center bg-gradient-to-r from-violet-600 to-indigo-600 text-indigo-50 mb-0 mx-0 px-0">
                        <span uk-icon="icon: cloud-upload"></span>
                        <span class="uk-text-middle">Upload your pet's photo here!</span>
                        <div uk-form-custom>
                            <form encType="multipart/form-data" action="">
                                <input id="img-input" type="file" multiple />
                            </form>
                            <span class="uk-link text-sky-500">selecting one</span>
                        </div>
                        <img id="test-id" />
                    </div>
                </div>


                <button class="uk-button uk-button-primary bg-indigo-800 hover:bg-indigo-500 uk-width-1-1 m-0 p-0"  id="new-pet-submit" type="submit">Create</button>
            </div>
            <div id="test-id"></div>
        </form>
    </div>
</section>

{{#if pets.length}}
    <div>
        <h2 class="flex justify-center font-semibold pt-4 mt-10 mb-1 text-indigo-50 my-2 px-2 py-2 text-3xl">Your Listed Pets</h2>
    </div>
    <section class="uk-child-width-1-2@m flex justify-center"uk-grid>  
      <ol>
        {{#each pets as |pet|}}
        <li class="">
            <div>
                    <div class="flex flex-col justify-end flex-wrap my-5">
                        <a href="/dashboard/edit/{{pet.id}}"><i class="fa-solid fa-pen-to-square text-indigo-50 hover:text-indigo-100 text-2xl"></i></a>
                    </div>
                </div>
                <div>
                    {{> pet-info pet}}
                </div>
        </li>
        {{/each}}
    </ol>
</section>
{{/if}}

<script src="/javascript/add-pet.js"></script>